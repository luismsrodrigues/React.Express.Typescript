{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "es6"
        ],
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "noImplicitAny": true,
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/client"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}