{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": true,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": { 
      "@/utils/*": ["./src/utils/*"], 
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./config"
  ]
}